<StackPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.progetto.client.ClientController">
   <children>
      <AnchorPane fx:id="loginPane" prefHeight="400.0" prefWidth="600.0">
         <children>
            <Button layoutX="265.0" layoutY="257.0" mnemonicParsing="false" onMouseClicked="#onEnterButtonClick" prefHeight="26.0" prefWidth="70.0" text="Enter" />
            <TextField fx:id="usr" layoutX="190.0" layoutY="173.0" prefHeight="26.0" prefWidth="219.0" />
            <Label layoutX="255.0" layoutY="87.0" text="Enter your email:" />
